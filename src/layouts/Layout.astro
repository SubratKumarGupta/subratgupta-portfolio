---
import MobileNav from "../components/mobile/mobileNav.astro";
import SideBar from "../components/Sidebar/sidebar.astro";
import GoogleAnylatic from "./google-anylatic.astro";

export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html class="bg-primary-Dark font-robotoMono" lang="en">
  <head>
    <GoogleAnylatic />
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <main class="flex text-white h-[100vh] overflow-x-hidden">
      <MobileNav displayDesktop={false} />

      <div class="mobile:hidden">
        <SideBar body="" title="" />
      </div>
      <!-- margin-left(ml) should be same width as Hreo/sidebar width -->
      <div class="content ml-[25%] mobile:ml-0">
        <slot />
      </div>
    </main>
  </body><style is:global>
    :root {
      --accent: 124, 58, 237;
      --accent-gradient: linear-gradient(
        45deg,
        rgb(var(--accent)),
        #da62c4 30%,
        white 60%
      );
    }
    ::-webkit-scrollbar {
      display: none;
    }
    html {
      font-family: "Roboto Mono", monospace;
    }
  </style>
</html>
