---
import MobileNav from "../components/mobile/mobileNav.astro";
import SideBar from "../components/Sidebar/sidebar.astro";

export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html class="bg-primary-Dark" lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <main class="flex text-white overflow-x-hidden h-[100vh]">
      <MobileNav />

      <div class="mobile:hidden">
        <SideBar body="" title="" />
      </div>
      <!-- margin-left(ml) should be same width as Hreo/sidebar width -->
      <div class="content ml-[25%] mobile:ml-0">
        <slot />
      </div>
    </main>
  </body>
</html>
<style is:global>
  :root {
    --accent: 124, 58, 237;
    --accent-gradient: linear-gradient(
      45deg,
      rgb(var(--accent)),
      #da62c4 30%,
      white 60%
    );
  }
  html {
    font-family: Roboto Mono, monospace;
  }
</style>
